<!DOCTYPE html>
<html>
<head>
  {{> issue-head}}
</head>
<body class="email index">
<table>
 <tr class="featured">
            <td style="background-image: url(/assets/images/{{this.image}})">
                <table>
                <tr>
                <td>
                <h1>tagmento<br/>news</h1>
                </td>
                </tr>
                </table>
            </td>
        </tr>
<tr>
<td id="main">

    <table>
       <thead>
        <tr class="header">
            <td>
                <table class="meta">
                    <tr>
                    <td>
                <p class="no meta">
                {{#intl locales="en-US"}}{{formatDate this.issue_date day="numeric" month="long" year="numeric" locale="en-us"}}{{/intl}}
                </p>
                </td>
                <td>
                <p class="date meta">
                Issue #{{this.issue_no}}
                </p>
                </td>
                    </tr>
                </table>
                <h2>{{this.title}}</h2>
                <hr>
                <p class="email-content">
                  {{ safe contents }}
                </p>
            </td>
        </tr>
        </thead>
        <tbody>
        {{#each (access issues this.issue_no)}}
     
            <tr>
                <td>
                   {{#if this.image}}
                   <table class="featured-container">
            <tr class="featured">
                <td style="background-image: url(/assets/images/{{this.image}})">
                    &nbsp;
                </td>
            </tr>
            </table>
            {{else}}
            <hr>
        {{/if}}
                    <h3><a href="../{{this.path}}">{{this.title}}</a></h3>
                    <h4 class="meta date">
                    {{#unless this.date}}
                    DATE ERROR
                    {{else}}
                    {{#intl locales="en-US"}}{{formatDate this.date day="numeric" month="long" year="numeric" locale="en-us"}}{{/intl}}
                    {{/unless}}
                    </h4>
                    <p>
                    {{#unless this.abstract}}
                      {{strip excerpt}}
                    {{else}}
                      {{this.abstract}}
                    {{/unless}}
                    </p>
                    <p><a href="../{{this.path}}">Read More...</a></p>
                </td>
            </tr>
        {{/each}}
</tbody>
    </table>
    </td>
    </tr>
    <tr>
    <td>
        {{> issue-footer}}
        </td>
        </tr>
</td>
</tr>
</table>
</body>
</html>